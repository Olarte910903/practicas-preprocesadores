*
  box-sizing border-box
  margin 0 
  padding 0

.header
  width 100vw
  height 20vh
  background-color gray
  display flex
  align-items center
  justify-content space-around
  & h1
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 2rem
    font-weight 700
  & p
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 1rem
    font-weight 400

.quien-soy
  width 100vw
  height 100vh
  background-color rgb(46, 46, 46)
  display flex
  align-items center
  flex-direction column
  
  & h2
    color white
    font-family Arial, Helvetica, sans-serif
    font-weight: 800
    font-size 3rem
    margin-top 2rem
  & p
    color white
    font-family Arial, Helvetica, sans-serif
    font-weight 300
    font-size 200
    text-align center
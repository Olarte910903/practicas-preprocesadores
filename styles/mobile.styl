$fullSize = 100% //Declaraci√≥n de variables
$midSize = 80%

*
  box-sizing border-box
  margin 0
  padding 0

.header
  width 100vw
  height 20vh
  background-color red
  display flex
  align-items center
  justify-content space-around
  & h1
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 5rem
    font-weight 700
  & p
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 2rem
    font-weight 400
    text-align center

.main
  width 100vw
  height 300vh
  background-color gray
  display flex
  align-items center
  justify-content center
  flex-direction column

.quien-soy
  width $midSize
  height 100vh
  background-color blue
  display flex
  flex-direction column
  align-items center
  justify-content center
  & h2
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 4rem
  & p
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 2rem

.tecnologias
  width $fullSize
  height 100vh
  background-color skyblue
  display flex
  align-items center
  justify-content center
  & h2
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 3rem
    font-weight 800

.proyectos //Selector de clases
  width $fullSize //LLamar una variable
  height 100vh
  background-color purple
  display flex
  align-items center
  justify-content center
  & h2 //Selector de elementos hijos
    color white
    font-family Arial, Helvetica, sans-serif
    font-size 3rem
    font-weight 800


.footer
  width 100vw
  height 20vh
  background-color yellow
  display flex
  align-items center
  justify-content space-around
  & h2
    color green
    font-family Arial, Helvetica, sans-serif
    font-weight 800
    font-size 3rem
  & p
    color green
    font-family Arial, Helvetica, sans-serif
    font-weight 400
    font-size 2rem